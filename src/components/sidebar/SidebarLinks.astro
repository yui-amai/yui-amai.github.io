---
import { type LanguageKeys } from '@/i18n/ui'

const { lang } = Astro.props as { lang: LanguageKeys }

// Check current page for active states
const currentPath = Astro.url.pathname
const isIntroductionPage = currentPath === `/${lang}/introduction`
const isAboutPage = currentPath === `/${lang}/about`
const isPostsPage = currentPath === `/${lang}/posts`
const isCategoriesPage = currentPath === `/${lang}/categories`
const isTagsPage = currentPath === `/${lang}/tags`
const isArchivesPage = currentPath === `/${lang}/archives`
---

<nav class="space-y-2">
  <a
    href={`/${lang}/introduction`}
    class={`flex items-center rounded-base p-3 text-base transition-colors ${
      isIntroductionPage 
        ? 'bg-black/5 text-lightModeText dark:bg-white/5 dark:text-darkModeText' 
        : 'text-lightModeText/80 hover:bg-black/5 hover:text-lightModeText dark:text-darkModeText/80 dark:hover:bg-white/10 dark:hover:text-darkModeText'
    }`}
  >
    <svg class="mr-3 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 15a4 4 0 004 4h9a5 5 0 10-.1-9.999 5.004 5.004 0 00-9.78 2.096A4.001 4.001 0 003 15z"></path>
    </svg>
    Introduction
  </a>
  
  <a
    href={`/${lang}/posts`}
    class={`flex items-center rounded-base p-3 text-base transition-colors ${
      isPostsPage 
        ? 'bg-black/5 text-lightModeText dark:bg-white/5 dark:text-darkModeText' 
        : 'text-lightModeText/80 hover:bg-black/5 hover:text-lightModeText dark:text-darkModeText/80 dark:hover:bg-white/10 dark:hover:text-darkModeText'
    }`}
  >
    <svg class="mr-3 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
    </svg>
    Posts
  </a>
  
  <a
    href={`/${lang}/categories`}
    class={`flex items-center rounded-base p-3 text-base transition-colors ${
      isCategoriesPage 
        ? 'bg-black/5 text-lightModeText dark:bg-white/5 dark:text-darkModeText' 
        : 'text-lightModeText/80 hover:bg-black/5 hover:text-lightModeText dark:text-darkModeText/80 dark:hover:bg-white/10 dark:hover:text-darkModeText'
    }`}
  >
    <svg class="mr-3 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
    </svg>
    Categories
  </a>
  
  <a
    href={`/${lang}/tags`}
    class={`flex items-center rounded-base p-3 text-base transition-colors ${
      isTagsPage 
        ? 'bg-black/5 text-lightModeText dark:bg-white/5 dark:text-darkModeText' 
        : 'text-lightModeText/80 hover:bg-black/5 hover:text-lightModeText dark:text-darkModeText/80 dark:hover:bg-white/10 dark:hover:text-darkModeText'
    }`}
  >
    <svg class="mr-3 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
    </svg>
    Tags
  </a>
  
  <a
    href={`/${lang}/archives`}
    class={`flex items-center rounded-base p-3 text-base transition-colors ${
      isArchivesPage 
        ? 'bg-black/5 text-lightModeText dark:bg-white/5 dark:text-darkModeText' 
        : 'text-lightModeText/80 hover:bg-black/5 hover:text-lightModeText dark:text-darkModeText/80 dark:hover:bg-white/10 dark:hover:text-darkModeText'
    }`}
  >
    <svg class="mr-3 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4"></path>
    </svg>
    Archives
  </a>
  
  <a
    href={`/${lang}/about`}
    class={`flex items-center rounded-base p-3 text-base transition-colors ${
      isAboutPage 
        ? 'bg-black/5 text-lightModeText dark:bg-white/5 dark:text-darkModeText' 
        : 'text-lightModeText/80 hover:bg-black/5 hover:text-lightModeText dark:text-darkModeText/80 dark:hover:bg-white/10 dark:hover:text-darkModeText'
    }`}
  >
    <svg class="mr-3 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
    </svg>
    About
  </a>
</nav>
